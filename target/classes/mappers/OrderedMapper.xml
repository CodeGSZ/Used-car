<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.crs_java.mapper.OrderedMapper">

    <!--完成订单查询-->
    <select id="wancheng" resultType="com.example.crs_java.entity.Order" >
        select * from ordered where state = 0;
    </select>
    <!--失败订单查询-->
    <select id="fail" resultType="com.example.crs_java.entity.Order">
        select * from ordered where state = 1;
    </select>
    <!--正在生效订单查询-->
    <select id="ordering" resultType="com.example.crs_java.entity.User">
        select * from user where orderNum &gt; 0;
    </select>

</mapper>